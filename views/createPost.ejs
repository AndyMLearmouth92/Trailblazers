<%- include('partials/header') -%>
<div class="hero min-h-screen" style="background-image: url(/Images/funes-4984899.jpg);">
  <div class="hero-overlay bg-opacity-20"></div>
  <div class="text-center text-neutral-content w-1/3">
    <div class="">
      <div class="card flex-shrink-0 shadow-2xl bg-slate-300">
        <div class="card-body">
          <form action="/signup" method="POST">

          <div class="form-control">
            <h2 class="text-black text-2xl">Create a Post</h2>
          <label class="label">
            <span class="label-text">Title</span>
          </label>
          <input type="text" placeholder="title" class="input input-bordered text-black" id="title" name="title"/>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Location</span>
            </label>
            <input type="text" placeholder="location" class="input input-bordered text-black" id="location" name="location"/>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Trail Name</span>
            </label>
            <input type="text" placeholder="trail name" class="input input-bordered text-black" id="trailName" name="trailName"/>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Caption</span>
            </label>
            <textarea type="text" placeholder="caption" class="input input-bordered h-32" id="caption" name="caption"></textarea>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Photo</span>
            </label>
            <input type="file" class="file-input file-input-bordered file-input-slate-900 w-full max-w-xs" id="imageUpload" name="file" />
          </div>

          
           
          


          <div class="form-control mt-3">
            <button class="btn btn-grey">Post</button>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>



<%- include('partials/footer') -%>

