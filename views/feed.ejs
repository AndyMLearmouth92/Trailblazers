<!-- Partials folder allows us to input the header and footer into each EJS file which makes the code dryer and more readable. -->

<%- include('partials/header') -%>

<section class="border border-slate-900 grid grid-cols-3 gap-4 border-black m-4 p-4" >
      
  <div class="col-start-1 col-span-2 grid grid-cols-9 py-2">
    <h2 class="col-start-1 text-2xl">Feed:</h2>
  </div>
  <div>
    <a class="col-start-3 col-span-2 flex justify-end" href="/post"><button class="btn btn-outline mx-4 normal-case text-lg w-2/5">Add Post</button></a>
  </div>
  <% for(var i=0; i<posts.length; i++) {%>
  <div class="card card-compact w-fit bg-slate-100 shadow-xl m-2">
    <figure class="h-72 bg-contain"><a href="/post/<%= posts[i]._id%>"><img src="<%= posts[i].image%>" alt="Shoes" /></a></figure>
    <div class="card-body flex grid grid-cols-3">
      <div class="col-start-1 col-span-2">
      <h2 class="card-title"><%= posts[i].title%></h2>
      <p><%= posts[i].caption%></p>
      </div>
      <div class="col-start-3 col-span-1">
        <h2 class="card-title"> <%= posts[i].user.userName %></h2>
        <div class="mb-2"><h5 class="font-bold">Location:</h5> <%= posts[i].location%></div>
        
        <div><h5 class="font-bold">Trail Name:</h5> <%= posts[i].trailName%></div>
      </div>
  </div>
    <section class="grid grid-cols-6 card-body gap-0">
      <div col-start-1 col-span-3>
        <h5 class="font-bold">Rating:</h5>
        <div class="rating rating-mdlg mt-2">
          <% for(var j=0; j<posts[i].rating; j++) {%>
          <input type="" name="rating-2" class="mask mask-star-2 bg-slate-900" />
          <%}%>
        </div>
      </div>
      <div class="card-actions justify-end col-start-4">
        <form
        class="col-1"
        action="/feed/likePost/<%= posts[i]._id %>?_method=PUT"
        method="POST"
      >
        <button class="btn fa fa-heart bg-slate-900" type="submit"></button>
        <h3>Likes: <%= posts[i].likes %></h3>
      </form>
    </div>
    <div class ="flex justify-end col-start-5">
      <button class="btn fa fa-comment bg-slate-900" type="submit"></button>
      <!-- <h3>Comments: <%= posts[i].likes %></h3> -->
      
    </div>
    <div class="flex justify-end col-start-6">
      <%if(posts[i].user._id == user.id){ %>
        <form
          action="/feed/deletePost/<%= posts[i]._id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn fa fa-trash bg-slate-900" type="submit"></button>
        </form>
    </div>
  </section>
        <%}%>
      </div>
    </div>
  </div>
  <% } %>
</section>
  
</section>
  
<%- include('partials/footer') -%>