  <body class="bg-slate-200">
    
    <div class="navbar bg-slate-900 text-white">
      <div class="flex-1">
        <a href="/" class="btn btn-ghost normal-case text-4xl">Trailblazers</a>
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal px-1 text-xl">
          <% if (loggedInUser != undefined) { %>
          <li><a href="/profile/<%= loggedInUser._id%>">Profile</a></li>
          

          <!-- Andy to correct the nav bar -->
          <li><a href="/feed">Feed</a></li>
          <li><a href="/post" >Post</a></li>
        </ul>
       
        <div class="form-control">
          <input type="text" placeholder="Search" class="input input-bordered" />
        </div>
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <% if (user == undefined) { %>
              <img src="/Images/dog-983014_1920.jpg" />
          <% } else {%>            
            <a href="/profile/<%= loggedInUser._id%>"><img src="<%= loggedInUser.profilePhoto%>" /></a>
          <% }%>
          </div>
        </label>
        <ul>
          <a href="/logout"><li class="col-3 bg-transparent hover:bg-slate-500 text-white font-semibold hover:text-white py-2 px-4 border border-white hover:border-transparent rounded">Sign Out</li></a>
          <% } %>
        </ul>
      </div>
    </div>
    

