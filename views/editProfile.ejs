<%- include('partials/header') -%>
<!-- header image -->
<div class="hero min-h-screen bg-base-200" style="background-image: url(/Images/funes-4984899.jpg);">
  <div class="hero-content grid grid-cols-2">
    <div class="col-start-1 col-span-2 justify-self-center ">
      
    </div>
    <div class="col-start-1 mx-10">
      <img src="/Images/dog-983014_1920.jpg" class="max-w-sm rounded-lg shadow-2xl border-white border-4" />
    </div>
    <div class="col-start-2 justify-center mx-10">
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body col-span-2">
        <div class="form-control">
          <h1 class="text-3xl font-bold text-slate-900">Edit Profile</h1>
          </div>
        <form action="/editProfile/editProfile" enctype="multipart/form-data" method="POST">
        <div class="form-control">
          <label class="label">
            <span class="label-text text-slate-900">User Name</span>
          </label>
          <input type="text" placeholder="User Name" class="input input-bordered"  id="userName" name="userName"/>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text text-slate-900">Location</span>
          </label>
          <input type="text" placeholder="Location" class="input input-bordered" id="location" name="location"/>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text text-slate-900">Bio</span>
          </label>
          <textarea type="text" placeholder="Bio" class="input input-bordered h-32" id="bio" name="bio"></textarea>
        </div>

        <div>
          <input type="file" class="file-input file-input-bordered file-input-slate-900 w-full max-w-xs" id="profileImage" name="profileImage" />
        </div>

        <div class="form-control mt-6">
          <button class="btn btn-grey">Submit</button>
        </div>
        </form>

      </div>
      </div>
    </div>
  </div>
</div>



            <h2>Add a post</h2>
            <!-- Add a post heading -->
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location">
            </div>
            <div class="mb-3">
              <label for="trailName" class="form-label">Trail Name</label>
              <input type="text" class="form-control" id="trailName" name="trailName">
            </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
            <!-- Form to upload title, location, trail name, caption and image alongside a button to submit the post. -->
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <!-- Loops through all the users posts and put them in LIs and anchor tags the image. -->
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <!-- Building LIs using ID -->
              <img class="img-fluid" src="<%= posts[i].image%>">
              <!-- Plugging in to build the profile -->
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
          <!-- Button to return to the feed. -->
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>